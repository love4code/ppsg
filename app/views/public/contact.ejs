<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1 class="mb-4">Contact Us</h1>
            <p class="lead mb-4">We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>

            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form action="/contact" method="POST">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name *</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email *</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>

                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="tel" class="form-control" id="phone" name="phone">
                        </div>

                        <div class="mb-3">
                            <label for="reason" class="form-label">Reason for Contact</label>
                            <select class="form-select" id="reason" name="reason">
                                <option value="">Select a reason</option>
                                <option value="general">General Inquiry</option>
                                <option value="quote">Request a Quote</option>
                                <option value="service">Service Question</option>
                                <option value="product">Product Question</option>
                                <option value="other">Other</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="message" class="form-label">Message *</label>
                            <textarea class="form-control" id="message" name="message" rows="6" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">Send Message</button>
                    </form>
                </div>
            </div>

            <div class="mt-5">
                <h3>Contact Information</h3>
                <p class="text-muted">For immediate assistance, please contact us directly.</p>
                <% if (typeof companySettings !== 'undefined' && companySettings) { %>
                    <% if (companySettings.address) { %>
                        <p><strong>Address:</strong><br>
                            <%= companySettings.address %><br>
                            <% if (companySettings.city || companySettings.state || companySettings.zipCode) { %>
                                <%= companySettings.city ? companySettings.city : '' %><%= companySettings.city && companySettings.state ? ', ' : '' %>
                                <%= companySettings.state ? companySettings.state : '' %>
                                <%= companySettings.zipCode ? companySettings.zipCode : '' %>
                            <% } %>
                        </p>
                    <% } %>
                    <% if (companySettings.phone) { %>
                        <p><strong>Phone:</strong> <%= companySettings.phone %></p>
                    <% } %>
                    <% if (companySettings.email) { %>
                        <p><strong>Email:</strong> <a href="mailto:<%= companySettings.email %>"><%= companySettings.email %></a></p>
                    <% } %>
                <% } else { %>
                    <p><strong>Email:</strong> aquarianpoolandspa@gmail.com</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

