<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-eye"></i> View Product</h2>
    <div>
        <a href="/admin/products/<%= product._id %>/edit" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a href="/admin/products" class="btn btn-outline-secondary">Back</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <h3><%= product.name %></h3>
                <p class="text-muted">Slug: /<%= product.slug %></p>
                <% if (product.description) { %>
                    <p><%= product.description %></p>
                <% } else { %>
                    <p class="text-muted">No description provided.</p>
                <% } %>

                <div class="mb-3">
                    <% if (product.price) { %>
                        <strong>Price:</strong> $<%= product.price.toFixed(2) %>
                        <span class="badge bg-<%= product.isTaxable ? 'warning' : 'success' %> ms-2">
                            <%= product.isTaxable ? 'Taxable' : 'Non-taxable' %>
                        </span>
                    <% } else { %>
                        <strong>Price:</strong> <span class="text-muted">Not set</span>
                    <% } %>
                    <% if (product.sizes && product.sizes.length > 0) { %>
                        <div class="mt-2">
                            <strong>Sizes:</strong>
                            <ul class="mb-0">
                                <% product.sizes.forEach(size => { %>
                                    <li>
                                        <%= size.name %>
                                        <% if (size.price) { %> - $<%= size.price.toFixed(2) %><% } %>
                                        <% if (size.description) { %> (<%= size.description %>)<% } %>
                                    </li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>
                </div>

                <div class="mb-3">
                    <strong>Status:</strong>
                    <span class="badge bg-<%= product.status === 'published' ? 'success' : 'secondary' %>">
                        <%= product.status %>
                    </span>
                </div>
            </div>
            <div class="col-md-4">
                <% if (product.mainImage) { %>
                    <div class="mb-3">
                        <strong>Main Image:</strong>
                        <img src="/admin/media/image/<%= product.mainImage._id %>/large" class="img-fluid rounded mt-2">
                    </div>
                <% } %>

                <% if (product.gallery && product.gallery.length > 0) { %>
                    <div>
                        <strong>Gallery:</strong>
                        <div class="row g-2 mt-2">
                            <% product.gallery.forEach(image => { %>
                                <div class="col-6">
                                    <img src="/admin/media/image/<%= image._id %>/medium" class="img-fluid rounded">
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

