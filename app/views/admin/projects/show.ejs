<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-eye"></i> View Project</h2>
    <div>
        <a href="/admin/projects/<%= project._id %>/edit" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a href="/admin/projects" class="btn btn-outline-secondary">Back</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <h3><%= project.title %></h3>
                <p class="text-muted">Slug: /<%= project.slug %></p>
                <p><%= project.description %></p>

                <div class="mb-3">
                    <strong>Status:</strong>
                    <span class="badge bg-<%= project.status === 'published' ? 'success' : 'secondary' %>">
                        <%= project.status %>
                    </span>
                </div>

                <% if (project.location) { %>
                    <div class="mb-3">
                        <strong>Location:</strong> <%= project.location %>
                    </div>
                <% } %>

                <% if (project.date) { %>
                    <div class="mb-3">
                        <strong>Date:</strong> <%= new Date(project.date).toLocaleDateString() %>
                    </div>
                <% } %>

                <% if (project.tags && project.tags.length > 0) { %>
                    <div class="mb-3">
                        <strong>Tags:</strong>
                        <% project.tags.forEach(tag => { %>
                            <span class="badge bg-secondary me-1"><%= tag %></span>
                        <% }); %>
                    </div>
                <% } %>
            </div>
            <div class="col-md-4">
                <% if (project.mainImage) { %>
                    <div class="mb-3">
                        <strong>Main Image:</strong>
                        <img src="/admin/media/image/<%= project.mainImage._id %>/large" class="img-fluid rounded mt-2">
                    </div>
                <% } %>

                <% if (project.gallery && project.gallery.length > 0) { %>
                    <div>
                        <strong>Gallery:</strong>
                        <div class="row g-2 mt-2">
                            <% project.gallery.forEach(image => { %>
                                <div class="col-6">
                                    <img src="/admin/media/image/<%= image._id %>/medium" class="img-fluid rounded">
                                </div>
                            <% }); %>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

