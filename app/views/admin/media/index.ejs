<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-images"></i> Media Library</h2>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
        <i class="bi bi-upload"></i> Upload Media
    </button>
</div>

<div class="card">
    <div class="card-body">
        <form method="GET" class="mb-3">
            <div class="row g-2">
                <div class="col-md-8">
                    <input type="text" class="form-control" name="search" placeholder="Search by filename or title..." value="<%= search || '' %>">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </div>
        </form>

        <div class="row g-3">
            <% if (media.length > 0) { %>
                <% media.forEach(item => { %>
                    <div class="col-md-3 col-sm-4 col-6">
                        <div class="card">
                            <img src="/admin/media/image/<%= item._id %>/thumbnail" class="card-img-top" alt="<%= item.altText || item.title || item.originalFilename %>" style="height: 200px; object-fit: cover;">
                            <div class="card-body p-2">
                                <p class="card-text small mb-2 text-truncate" title="<%= item.originalFilename %>">
                                    <%= item.originalFilename %>
                                </p>
                                
                                <!-- Image Size URLs -->
                                <div class="mb-2">
                                    <small class="text-muted d-block mb-1">Image URLs:</small>
                                    <div class="btn-group-vertical btn-group-sm w-100" role="group">
                                        <button type="button" class="btn btn-outline-secondary btn-sm text-start" onclick="copyImageUrl('<%= typeof baseUrl !== 'undefined' ? baseUrl : '' %>/admin/media/image/<%= item._id %>/thumbnail', this)" title="Click to copy">
                                            <i class="bi bi-link-45deg"></i> Thumbnail
                                        </button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm text-start" onclick="copyImageUrl('<%= typeof baseUrl !== 'undefined' ? baseUrl : '' %>/admin/media/image/<%= item._id %>/medium', this)" title="Click to copy">
                                            <i class="bi bi-link-45deg"></i> Medium
                                        </button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm text-start" onclick="copyImageUrl('<%= typeof baseUrl !== 'undefined' ? baseUrl : '' %>/admin/media/image/<%= item._id %>/large', this)" title="Click to copy">
                                            <i class="bi bi-link-45deg"></i> Large
                                        </button>
                                    </div>
                                </div>
                                
                                <div class="btn-group btn-group-sm w-100" role="group">
                                    <a href="/admin/media/<%= item._id %>" class="btn btn-outline-primary" title="View & Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="/admin/media/image/<%= item._id %>/large" target="_blank" class="btn btn-outline-info" title="View Full Size">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <form action="/admin/media/<%= item._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this media?');">
                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12">
                    <p class="text-center text-muted py-5">No media found. Upload some images to get started.</p>
                </div>
            <% } %>
        </div>

        <% if (totalPages > 1) { %>
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %>">Previous</a>
                        </li>
                    <% } %>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %><%= search ? '&search=' + search : '' %>"><%= i %></a>
                        </li>
                    <% } %>
                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= currentPage + 1 %><%= search ? '&search=' + search : '' %>">Next</a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    </div>
</div>

<!-- Upload Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Media</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" id="closeUploadModal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="files" class="form-label">Select Images</label>
                    <input type="file" class="form-control" id="files" name="files" multiple accept="image/*">
                    <small class="form-text text-muted">You can select multiple images. Max 10MB per file.</small>
                </div>

                <!-- File List with Progress -->
                <div id="fileList" class="mt-4" style="display: none;">
                    <h6 class="mb-3">Files to Upload:</h6>
                    <div id="fileItems"></div>
                    <div class="d-flex gap-2 mt-3">
                        <button type="button" class="btn btn-primary" id="startUpload">
                            <i class="bi bi-upload"></i> Start Upload
                        </button>
                        <button type="button" class="btn btn-secondary" id="clearFiles">
                            <i class="bi bi-x-circle"></i> Clear All
                        </button>
                    </div>
                </div>

                <!-- Upload Progress Area -->
                <div id="uploadProgress" class="mt-4" style="display: none;">
                    <h6 class="mb-3">Upload Progress:</h6>
                    <div id="uploadItems"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
let selectedFiles = [];
let uploadQueue = [];

document.getElementById('files').addEventListener('change', function(e) {
    const files = Array.from(e.target.files);
    if (files.length === 0) return;

    selectedFiles = files;
    displayFileList();
});

function displayFileList() {
    const fileList = document.getElementById('fileList');
    const fileItems = document.getElementById('fileItems');
    
    if (selectedFiles.length === 0) {
        fileList.style.display = 'none';
        return;
    }

    fileList.style.display = 'block';
    fileItems.innerHTML = '';

    selectedFiles.forEach((file, index) => {
        const fileSize = (file.size / 1024 / 1024).toFixed(2);
        const fileItem = document.createElement('div');
        fileItem.className = 'card mb-2';
        fileItem.innerHTML = `
            <div class="card-body p-2">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="flex-grow-1">
                        <strong class="small">${file.name}</strong>
                        <div class="text-muted small">${fileSize} MB</div>
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeFile(${index})">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            </div>
        `;
        fileItems.appendChild(fileItem);
    });
}

function removeFile(index) {
    selectedFiles.splice(index, 1);
    displayFileList();
    // Update the file input
    const dataTransfer = new DataTransfer();
    selectedFiles.forEach(file => dataTransfer.items.add(file));
    document.getElementById('files').files = dataTransfer.files;
}

document.getElementById('clearFiles').addEventListener('click', function() {
    selectedFiles = [];
    document.getElementById('files').value = '';
    displayFileList();
    document.getElementById('uploadProgress').style.display = 'none';
    document.getElementById('uploadItems').innerHTML = '';
});

document.getElementById('startUpload').addEventListener('click', function() {
    if (selectedFiles.length === 0) {
        alert('Please select files to upload');
        return;
    }

    const startBtn = document.getElementById('startUpload');
    startBtn.disabled = true;
    startBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Uploading...';

    uploadFiles();
});

function uploadFiles() {
    const uploadProgress = document.getElementById('uploadProgress');
    const uploadItems = document.getElementById('uploadItems');
    uploadProgress.style.display = 'block';
    uploadItems.innerHTML = '';

    // Create upload items for each file
    selectedFiles.forEach((file, index) => {
        const uploadItem = document.createElement('div');
        uploadItem.className = 'card mb-2';
        uploadItem.id = `upload-item-${index}`;
        uploadItem.innerHTML = `
            <div class="card-body p-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div>
                        <strong class="small">${file.name}</strong>
                        <div class="text-muted small" id="status-${index}">Preparing...</div>
                    </div>
                    <div id="progress-percent-${index}" class="text-muted small">0%</div>
                </div>
                <div class="progress" style="height: 8px;">
                    <div class="progress-bar" id="progress-bar-${index}" role="progressbar" style="width: 0%"></div>
                </div>
            </div>
        `;
        uploadItems.appendChild(uploadItem);
    });

    // Upload files one by one
    uploadQueue = selectedFiles.map((file, index) => ({ file, index }));
    uploadNext();
}

function uploadNext() {
    if (uploadQueue.length === 0) {
        // All uploads complete
        document.getElementById('startUpload').disabled = false;
        document.getElementById('startUpload').innerHTML = '<i class="bi bi-upload"></i> Start Upload';
        
        // Show success message and reload after 2 seconds
        setTimeout(() => {
            window.location.reload();
        }, 2000);
        return;
    }

    const { file, index } = uploadQueue.shift();
    uploadFile(file, index);
}

function uploadFile(file, index) {
    const formData = new FormData();
    formData.append('files', file);

    const xhr = new XMLHttpRequest();

    // Update status
    document.getElementById(`status-${index}`).textContent = 'Uploading...';

    // Track upload progress
    xhr.upload.addEventListener('progress', function(e) {
        if (e.lengthComputable) {
            const percentComplete = Math.round((e.loaded / e.total) * 100);
            const progressBar = document.getElementById(`progress-bar-${index}`);
            const progressPercent = document.getElementById(`progress-percent-${index}`);
            
            progressBar.style.width = percentComplete + '%';
            progressPercent.textContent = percentComplete + '%';
            
            if (percentComplete < 100) {
                progressBar.className = 'progress-bar progress-bar-striped progress-bar-animated';
            }
        }
    });

    // Handle completion
    xhr.addEventListener('load', function() {
        if (xhr.status === 200) {
            try {
                const response = JSON.parse(xhr.responseText);
                if (response.success) {
                    const progressBar = document.getElementById(`progress-bar-${index}`);
                    const status = document.getElementById(`status-${index}`);
                    const progressPercent = document.getElementById(`progress-percent-${index}`);
                    
                    progressBar.className = 'progress-bar bg-success';
                    progressBar.style.width = '100%';
                    progressPercent.textContent = '100%';
                    status.textContent = 'Uploaded successfully';
                    status.className = 'text-success small';
                    
                    // Upload next file
                    setTimeout(() => {
                        uploadNext();
                    }, 300);
                } else {
                    handleUploadError(index, response.error || 'Upload failed');
                }
            } catch (e) {
                // If response is not JSON, assume success (for backward compatibility)
                const progressBar = document.getElementById(`progress-bar-${index}`);
                const status = document.getElementById(`status-${index}`);
                const progressPercent = document.getElementById(`progress-percent-${index}`);
                
                progressBar.className = 'progress-bar bg-success';
                progressBar.style.width = '100%';
                progressPercent.textContent = '100%';
                status.textContent = 'Uploaded successfully';
                status.className = 'text-success small';
                
                setTimeout(() => {
                    uploadNext();
                }, 300);
            }
        } else {
            try {
                const response = JSON.parse(xhr.responseText);
                handleUploadError(index, response.error || 'Upload failed');
            } catch (e) {
                handleUploadError(index, 'Upload failed');
            }
        }
    });

    // Handle errors
    xhr.addEventListener('error', function() {
        handleUploadError(index, 'Network error');
    });

    xhr.addEventListener('abort', function() {
        handleUploadError(index, 'Upload cancelled');
    });

    // Start upload (using single file endpoint for better progress tracking)
    xhr.open('POST', '/admin/media/upload-single');
    xhr.setRequestHeader('X-Requested-With', 'XMLHttpRequest');
    xhr.send(formData);
}

function handleUploadError(index, message) {
    const progressBar = document.getElementById(`progress-bar-${index}`);
    const status = document.getElementById(`status-${index}`);
    
    progressBar.className = 'progress-bar bg-danger';
    progressBar.style.width = '100%';
    status.textContent = message;
    status.className = 'text-danger small';
    
    // Continue with next file
    uploadNext();
}

// Reset modal when closed
document.getElementById('closeUploadModal').addEventListener('click', function() {
    selectedFiles = [];
    document.getElementById('files').value = '';
    document.getElementById('fileList').style.display = 'none';
    document.getElementById('uploadProgress').style.display = 'none';
    document.getElementById('uploadItems').innerHTML = '';
    document.getElementById('startUpload').disabled = false;
    document.getElementById('startUpload').innerHTML = '<i class="bi bi-upload"></i> Start Upload';
});

// Also reset when modal is hidden via Bootstrap
const uploadModal = document.getElementById('uploadModal');
if (uploadModal) {
    uploadModal.addEventListener('hidden.bs.modal', function() {
        selectedFiles = [];
        document.getElementById('files').value = '';
        document.getElementById('fileList').style.display = 'none';
        document.getElementById('uploadProgress').style.display = 'none';
        document.getElementById('uploadItems').innerHTML = '';
        document.getElementById('startUpload').disabled = false;
        document.getElementById('startUpload').innerHTML = '<i class="bi bi-upload"></i> Start Upload';
    });
}

// Copy image URL to clipboard
function copyImageUrl(url, button) {
    if (navigator.clipboard && navigator.clipboard.writeText) {
        navigator.clipboard.writeText(url).then(() => {
            const originalHTML = button.innerHTML;
            button.innerHTML = '<i class="bi bi-check"></i> Copied!';
            button.classList.remove('btn-outline-secondary');
            button.classList.add('btn-success');
            
            setTimeout(() => {
                button.innerHTML = originalHTML;
                button.classList.remove('btn-success');
                button.classList.add('btn-outline-secondary');
            }, 2000);
        }).catch(err => {
            console.error('Failed to copy:', err);
            alert('Failed to copy URL. URL: ' + url);
        });
    } else {
        // Fallback for older browsers
        const textarea = document.createElement('textarea');
        textarea.value = url;
        textarea.style.position = 'fixed';
        textarea.style.opacity = '0';
        document.body.appendChild(textarea);
        textarea.select();
        try {
            document.execCommand('copy');
            const originalHTML = button.innerHTML;
            button.innerHTML = '<i class="bi bi-check"></i> Copied!';
            button.classList.remove('btn-outline-secondary');
            button.classList.add('btn-success');
            
            setTimeout(() => {
                button.innerHTML = originalHTML;
                button.classList.remove('btn-success');
                button.classList.add('btn-outline-secondary');
            }, 2000);
        } catch (err) {
            alert('Failed to copy URL. URL: ' + url);
        }
        document.body.removeChild(textarea);
    }
}
</script>

