<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-images"></i> Media Library</h2>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
        <i class="bi bi-upload"></i> Upload Media
    </button>
</div>

<div class="card">
    <div class="card-body">
        <form method="GET" class="mb-3">
            <div class="row g-2">
                <div class="col-md-8">
                    <input type="text" class="form-control" name="search" placeholder="Search by filename or title..." value="<%= search || '' %>">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-outline-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </div>
        </form>

        <div class="row g-3">
            <% if (media.length > 0) { %>
                <% media.forEach(item => { %>
                    <div class="col-md-3 col-sm-4 col-6">
                        <div class="card">
                            <img src="/admin/media/image/<%= item._id %>/small" class="card-img-top" alt="<%= item.title || item.originalFilename %>" style="height: 200px; object-fit: cover;">
                            <div class="card-body p-2">
                                <p class="card-text small mb-1 text-truncate" title="<%= item.originalFilename %>">
                                    <%= item.originalFilename %>
                                </p>
                                <div class="btn-group btn-group-sm w-100" role="group">
                                    <a href="/admin/media/image/<%= item._id %>/large" target="_blank" class="btn btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <form action="/admin/media/<%= item._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this media?');">
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="col-12">
                    <p class="text-center text-muted py-5">No media found. Upload some images to get started.</p>
                </div>
            <% } %>
        </div>

        <% if (totalPages > 1) { %>
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %>">Previous</a>
                        </li>
                    <% } %>
                    <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %><%= search ? '&search=' + search : '' %>"><%= i %></a>
                        </li>
                    <% } %>
                    <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= currentPage + 1 %><%= search ? '&search=' + search : '' %>">Next</a>
                        </li>
                    <% } %>
                </ul>
            </nav>
        <% } %>
    </div>
</div>

<!-- Upload Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Media</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/admin/media/upload" method="POST" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="files" class="form-label">Select Images</label>
                        <input type="file" class="form-control" id="files" name="files" multiple accept="image/*" required>
                        <small class="form-text text-muted">You can select multiple images. Max 10MB per file.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </form>
        </div>
    </div>
</div>

