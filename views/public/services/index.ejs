<div class="container py-5">
    <h1 class="mb-4">Our Services</h1>
    
    <% if (services.length > 0) { %>
        <div class="row g-4">
            <% services.forEach(service => { %>
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <% if (service.mainImage) { %>
                            <img src="/admin/media/image/<%= service.mainImage._id %>/medium" class="card-img-top" alt="<%= service.name %>" style="height: 250px; object-fit: cover;">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= service.name %></h5>
                            <p class="card-text text-muted"><%= service.description.substring(0, 100) %>...</p>
                            <% if (service.basePrice) { %>
                                <p class="text-primary fw-bold">Starting at $<%= service.basePrice.toFixed(2) %></p>
                            <% } %>
                            <a href="/services/<%= service.slug %>" class="btn btn-primary">Learn More</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="alert alert-info">
            <p class="mb-0">No services available at this time. Please check back later.</p>
        </div>
    <% } %>
</div>

