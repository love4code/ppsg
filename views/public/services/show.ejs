<div class="container py-5">
    <div class="row">
        <div class="col-md-8">
            <h1 class="mb-3"><%= service.name %></h1>
            
            <% if (service.mainImage) { %>
                <img src="/admin/media/image/<%= service.mainImage._id %>/large" class="img-fluid rounded mb-4" alt="<%= service.name %>">
            <% } %>

            <div class="mb-4">
                <p class="lead"><%= service.description %></p>
            </div>

            <% if (service.basePrice) { %>
                <div class="mb-4">
                    <h3 class="text-primary">Starting at $<%= service.basePrice.toFixed(2) %></h3>
                </div>
            <% } %>

            <a href="/contact" class="btn btn-primary btn-lg">Get a Quote</a>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5>Service Information</h5>
                    <hr>
                    <% if (service.basePrice) { %>
                        <p><strong>Base Price:</strong> $<%= service.basePrice.toFixed(2) %></p>
                    <% } else { %>
                        <p><strong>Pricing:</strong> Contact us for a quote</p>
                    <% } %>
                    <a href="/services" class="btn btn-primary w-100">Back to Services</a>
                    <a href="/contact" class="btn btn-outline-primary w-100 mt-2">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</div>

